{
    "files.exclude": {
        "**/*.js": { "when": "$(basename).ts" },
        "**/*?.js": { "when": "$(basename).tsx" }
    },
    "files.autoSave": "off",
    // Set the default
    "editor.formatOnSave": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "workbench.editor.showTabs": true
}
